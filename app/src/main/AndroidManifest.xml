<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bj.yatu.projectmanagement">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".common.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/manager_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/manager_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.LoginActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="主界面"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.AddProjectActivity"
            android:label="添加项目页面"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|stateUnchanged" />
        <activity
            android:name=".activity.AddPanelActivity"
            android:label="添加节点界面"
            android:screenOrientation="portrait"
            android:theme="@style/Transparent" />
        <activity
            android:name=".activity.ProjectManagerActivity"
            android:label="项目经理界面"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.ProjectDetailActivity"
            android:label="项目详情界面"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.BossProjectDetailActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.AddPlanActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Transparent" />
        <activity
            android:name=".activity.AddQuestionandAnswerActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Transparent" />

        <activity android:name=".activity.QuestionListActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Transparent" />
    </application>

</manifest>